#include"i2c.h"
#include"Accelerometer.h"

void AccelerometerInit()
{
	HAL_I2C_Mem_Write(ACC_I2C_HANDLE,
			MPU6050_DEVICE_ADDRESS,
			MPU_RA_PWR_MGMT,
			1,
			g_AccelerometerSettings,
			1,
			ACC_I2C_TIMEOUT);
}
